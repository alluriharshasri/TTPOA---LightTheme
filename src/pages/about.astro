---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import AntigravityBg from '../components/AntigravityBg.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';
import image1 from '../assets/images/Image1.jpg';
import image2 from '../assets/images/Image2.jpg';
---

<Layout title="About Us - TTPOA">
  <AntigravityBg />
  <Navbar currentPage="about" />
  
  <main class="pt-16 lg:pt-20">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-blue-50/30 via-transparent to-orange-50/30 backdrop-blur-sm py-20">
      <div class="w-full mx-auto">
        <div class="text-center w-full mx-auto">
          <span class="fade-up inline-block bg-blue-100 text-blue-700 px-4 py-2 rounded-full text-sm font-medium mb-4">
            About Us
          </span>
          <h1 class="fade-up delay-100 text-4xl md:text-5xl font-bold text-gray-900 mb-6">
            Telangana Training & <span class="gradient-text">Placement Officers</span> Association
          </h1>
          <p class="fade-up delay-200 text-lg text-gray-800 leading-relaxed">
            TTPOA is the premier body representing Training & Placement Officers across Telangana State, dedicated to bridging the gap between academia and industry.
          </p>
        </div>
      </div>
    </section>

    <!-- Mission Section -->
    <section class="section-padding bg-white/5 backdrop-blur-sm">
      <div class="w-full mx-auto">
        <div class="grid lg:grid-cols-2 gap-16 items-center">
          <div class="fade-left">
            <div class="relative">
              <div class="absolute -inset-4 bg-gradient-to-r from-blue-500 to-cyan-500 rounded-3xl blur-2xl opacity-10"></div>
              <div class="relative rounded-3xl overflow-hidden shadow-2xl">
                <Image src={image1} alt="TTPOA Mission" class="w-full h-[400px] object-cover" />
              </div>
            </div>
          </div>

          <div class="fade-right">
            <span class="inline-block bg-green-100 text-green-700 px-4 py-2 rounded-full text-sm font-medium mb-4">
              Our Mission
            </span>
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
              Empowering Careers Through Collaboration
            </h2>
            <p class="text-gray-800 mb-6 leading-relaxed">
              Our mission is to create a seamless ecosystem where students, educational institutions, and organizations collaborate effectively for mutual growth and success.
            </p>
            <p class="text-gray-800 mb-8 leading-relaxed">
              We work tirelessly to ensure students receive the best placement opportunities while helping companies find the right talent for their organizations.
            </p>
            
            <div class="grid grid-cols-2 gap-4">
              <div class="bg-slate-50 rounded-2xl p-6 text-center">
                <div class="text-3xl font-bold text-blue-600 mb-2">10+</div>
                <p class="text-sm text-slate-600">Years of Excellence</p>
              </div>
              <div class="bg-slate-50 rounded-2xl p-6 text-center">
                <div class="text-3xl font-bold text-blue-600 mb-2">500+</div>
                <p class="text-sm text-slate-600">Partner Colleges</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Vision Section -->
    <section class="section-padding bg-gradient-to-b from-slate-50/20 to-transparent backdrop-blur-sm">
      <div class="w-full mx-auto">
        <div class="grid lg:grid-cols-2 gap-16 items-center">
          <div class="fade-left order-2 lg:order-1">
            <span class="inline-block bg-purple-100 text-purple-700 px-4 py-2 rounded-full text-sm font-medium mb-4">
              Our Vision
            </span>
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
              Building Tomorrow's Workforce Today
            </h2>
            <p class="text-gray-800 mb-6 leading-relaxed">
              We envision a future where every student has access to quality career opportunities and every organization finds the perfect talent match.
            </p>
            
            <div class="space-y-4">
              <div class="flex items-start space-x-4">
                <div class="w-10 h-10 rounded-xl bg-blue-100 flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-blue-600 mb-1">Industry Connect</h4>
                  <p class="text-sm text-gray-900">Direct partnerships with leading companies</p>
                </div>
              </div>
              <div class="flex items-start space-x-4">
                <div class="w-10 h-10 rounded-xl bg-green-100 flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-green-600 mb-1">Skill Development</h4>
                  <p class="text-sm text-gray-900">Comprehensive training programs</p>
                </div>
              </div>
              <div class="flex items-start space-x-4">
                <div class="w-10 h-10 rounded-xl bg-purple-100 flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-purple-600 mb-1">Career Guidance</h4>
                  <p class="text-sm text-gray-900">Expert mentorship and counseling</p>
                </div>
              </div>
            </div>
          </div>

          <div class="fade-right order-1 lg:order-2">
            <div class="relative">
              <div class="absolute -inset-4 bg-gradient-to-r from-purple-500 to-pink-500 rounded-3xl blur-2xl opacity-10"></div>
              <div class="relative rounded-3xl overflow-hidden shadow-2xl">
                <Image src={image2} alt="TTPOA Vision" class="w-full h-[400px] object-cover" />
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Values Section -->
    <section class="section-padding bg-white/5 backdrop-blur-sm">
      <div class="w-full mx-auto">
        <div class="text-center mb-16">
          <span class="fade-up inline-block bg-orange-100 text-orange-700 px-4 py-2 rounded-full text-sm font-medium mb-4">
            Our Values
          </span>
          <h2 class="fade-up delay-100 text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            What We Stand For
          </h2>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="fade-up delay-100 text-center p-8 bg-slate-50 rounded-2xl hover:shadow-lg transition-shadow">
            <div class="w-16 h-16 mx-auto mb-6 rounded-2xl bg-blue-100 flex items-center justify-center">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-slate-900 mb-2">Integrity</h3>
            <p class="text-slate-600 text-sm">Maintaining transparency and trust in all our dealings</p>
          </div>

          <div class="fade-up delay-200 text-center p-8 bg-slate-50 rounded-2xl hover:shadow-lg transition-shadow">
            <div class="w-16 h-16 mx-auto mb-6 rounded-2xl bg-green-100 flex items-center justify-center">
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-slate-900 mb-2">Excellence</h3>
            <p class="text-slate-600 text-sm">Striving for the highest standards in everything we do</p>
          </div>

          <div class="fade-up delay-300 text-center p-8 bg-slate-50 rounded-2xl hover:shadow-lg transition-shadow">
            <div class="w-16 h-16 mx-auto mb-6 rounded-2xl bg-purple-100 flex items-center justify-center">
              <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-slate-900 mb-2">Collaboration</h3>
            <p class="text-slate-600 text-sm">Working together for collective success</p>
          </div>

          <div class="fade-up delay-400 text-center p-8 bg-slate-50 rounded-2xl hover:shadow-lg transition-shadow">
            <div class="w-16 h-16 mx-auto mb-6 rounded-2xl bg-orange-100 flex items-center justify-center">
              <svg class="w-8 h-8 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-slate-900 mb-2">Innovation</h3>
            <p class="text-slate-600 text-sm">Embracing new ideas and technologies</p>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
