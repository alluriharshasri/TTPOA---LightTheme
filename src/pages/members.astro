---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import AntigravityBg from '../components/AntigravityBg.astro';
import Footer from '../components/Footer.astro';

const teamMembers = [
  {
    name: "Dr. Rajesh Kumar",
    role: "President",
    institution: "JNTU Hyderabad"
  },
  {
    name: "Prof. Sanjay Reddy",
    role: "Vice President",
    institution: "Osmania University"
  },
  {
    name: "Mr. Venkat Rao",
    role: "General Secretary",
    institution: "IIIT Hyderabad"
  },
  {
    name: "Dr. Priya Sharma",
    role: "Treasurer",
    institution: "NIT Warangal"
  },
  {
    name: "Mr. Krishna Murthy",
    role: "Joint Secretary",
    institution: "CVR College of Engineering"
  },
  {
    name: "Dr. Lakshmi Devi",
    role: "Executive Member",
    institution: "Malla Reddy Engineering College"
  },
  {
    name: "Prof. Nagaraju",
    role: "Executive Member",
    institution: "VNRVJIET"
  },
  {
    name: "Mr. Suresh Babu",
    role: "Executive Member",
    institution: "Chaitanya Bharathi Institute of Technology"
  }
];
---

<Layout title="Association Members - TTPOA">
  <AntigravityBg />
  <Navbar currentPage="members" />
  
  <main class="pt-16 lg:pt-20">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-blue-50/30 via-transparent to-orange-50/30 backdrop-blur-sm py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto">
          <span class="fade-up inline-block bg-blue-100 text-blue-700 px-4 py-2 rounded-full text-sm font-medium mb-4">
            Our Team
          </span>
          <h1 class="fade-up delay-100 text-4xl md:text-5xl font-bold text-white mb-6">
            Association <span class="gradient-text">Members</span>
          </h1>
          <p class="fade-up delay-200 text-lg text-white/90 leading-relaxed">
            Meet the dedicated professionals driving TTPOA's mission to bridge the gap between academia and industry.
          </p>
        </div>
      </div>
    </section>

    <!-- Leadership Team -->
    <section class="section-padding bg-white/5 backdrop-blur-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <span class="fade-up inline-block bg-purple-100 text-purple-700 px-4 py-2 rounded-full text-sm font-medium mb-4">
            Leadership
          </span>
          <h2 class="fade-up delay-100 text-3xl md:text-4xl font-bold text-white mb-4">
            Executive Committee
          </h2>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          {teamMembers.map((member, index) => (
            <div class={`fade-up delay-${(index % 4 + 1) * 100} bg-slate-50 rounded-2xl p-6 text-center hover:shadow-xl hover:bg-white transition-all duration-300 group`}>
              <div class="w-24 h-24 mx-auto mb-4 rounded-full bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center text-white text-2xl font-bold shadow-lg group-hover:scale-105 transition-transform">
                {member.name.split(' ').map(n => n[0]).join('')}
              </div>
              <h3 class="text-lg font-bold text-slate-900 mb-1">{member.name}</h3>
              <p class="text-blue-600 font-medium text-sm mb-2">{member.role}</p>
              <p class="text-slate-500 text-sm">{member.institution}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Member Colleges Section -->
    <section class="section-padding bg-gradient-to-b from-slate-50/20 to-transparent backdrop-blur-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <span class="fade-up inline-block bg-green-100 text-green-700 px-4 py-2 rounded-full text-sm font-medium mb-4">
            Our Network
          </span>
          <h2 class="fade-up delay-100 text-3xl md:text-4xl font-bold text-white mb-4">
            Member Institutions
          </h2>
          <p class="fade-up delay-200 text-white/90 max-w-2xl mx-auto">
            TTPOA represents over 500+ colleges and universities across Telangana State
          </p>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
          {['Engineering Colleges', 'Polytechnics', 'Universities', 'Degree Colleges', 'MBA Institutes', 'MCA Institutes', 'Pharmacy Colleges', 'Other Institutions'].map((item, index) => (
            <div class={`fade-up delay-${(index % 4 + 1) * 100} bg-white rounded-2xl p-6 text-center border border-slate-100 hover:border-blue-200 hover:shadow-lg transition-all`}>
              <div class="w-12 h-12 mx-auto mb-4 rounded-xl bg-blue-50 flex items-center justify-center">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
              </div>
              <h3 class="font-semibold text-slate-900">{item}</h3>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Stats -->
    <section class="section-padding">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-4 gap-8 text-center">
          <div class="fade-up delay-100 bg-white/10 backdrop-blur-md border border-white/20 text-white rounded-2xl p-8 shadow-xl hover:bg-white/15 transition-all">
            <div class="text-4xl font-bold mb-2 counter" data-target="500">0</div>
            <p class="text-white/90 font-semibold">Member Colleges</p>
          </div>
          <div class="fade-up delay-200 bg-white/10 backdrop-blur-md border border-white/20 text-white rounded-2xl p-8 shadow-xl hover:bg-white/15 transition-all">
            <div class="text-4xl font-bold mb-2 counter" data-target="200">0</div>
            <p class="text-white/90 font-semibold">Partner Companies</p>
          </div>
          <div class="fade-up delay-300 bg-white/10 backdrop-blur-md border border-white/20 text-white rounded-2xl p-8 shadow-xl hover:bg-white/15 transition-all">
            <div class="text-4xl font-bold mb-2 counter" data-target="1000">0</div>
            <p class="text-white/90 font-semibold">Active TPOs</p>
          </div>
          <div class="fade-up delay-400 bg-white/10 backdrop-blur-md border border-white/20 text-white rounded-2xl p-8 shadow-xl hover:bg-white/15 transition-all">
            <div class="text-4xl font-bold mb-2 counter" data-target="10">0</div>
            <p class="text-white/90 font-semibold">Years of Service</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Join Section -->
    <section class="section-padding">
      <div class="max-w-7xl mx-auto px-1 sm:px-1.5 lg:px-2">
        <div class="bg-gradient-to-br from-blue-600 via-blue-700 to-purple-700 rounded-3xl p-12 shadow-2xl text-center relative overflow-hidden">
          <div class="absolute top-0 right-0 w-64 h-64 bg-orange-500/20 rounded-full blur-3xl"></div>
          <div class="absolute bottom-0 left-0 w-64 h-64 bg-blue-500/20 rounded-full blur-3xl"></div>
          <div class="relative z-10">
            <h2 class="fade-up text-3xl md:text-4xl font-bold mb-6 text-white">Become a Member</h2>
            <p class="fade-up delay-100 text-white/95 text-lg mb-8 max-w-2xl mx-auto">
              Join TTPOA and become part of Telangana's largest network of Training & Placement professionals.
            </p>
            <div class="fade-up delay-200 flex flex-col sm:flex-row gap-4 justify-center">
              <a href="https://ttpoa.org.in/index.php/Tpo_auth/register" class="inline-flex items-center justify-center px-8 py-4 bg-white text-blue-600 font-semibold rounded-xl hover:bg-blue-50 transition-all shadow-lg hover:shadow-xl hover:scale-105">
                Register as TPO
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </a>
              <a href="/contact" class="inline-flex items-center justify-center px-8 py-4 bg-transparent border-2 border-white text-white font-semibold rounded-xl hover:bg-white/10 transition-all hover:scale-105">
                Contact Us
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
